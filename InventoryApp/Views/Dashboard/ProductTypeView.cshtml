<div class="container mt-4">
    <h1 class="mb-4 text-center">Dashboard - Aperçu des Types de Produits</h1>

    <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var productType in Model)
            {
            <div class="col">
                <div class="card shadow-sm">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">@productType.Name</h5>
                        <div>
                            <!-- Bouton Modifier -->
                            <a href="/ProductType/Edit/@productType.Id" class="btn btn-sm btn-outline-primary me-1" title="Modifier">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <!-- Bouton Supprimer -->
                            <form asp-controller="ProductType" asp-action="Delete" method="post" style="display:inline;">
                                <input type="hidden" name="Id" value="@productType.Id" />
                                <button type="submit" class="btn btn-sm btn-outline-danger" title="Supprimer" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce type de produit ?');">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </form>
                        </div>
                    </div>
                    <div class="card-body">
                        <p><strong>Nombre de Types :</strong> @productType.TypeCount</p>
                        <p><strong>Quantité Totale :</strong> @productType.TotalQuantity</p>
                        <p><strong>En Stock :</strong> @productType.InStock</p>
                        <p><strong>Dernière Mise à Jour :</strong> @(productType.LastUpdate?.ToString("dd/MM/yyyy") ?? "N/A")</p>
                        <p><strong>Valeur Totale :</strong> @productType.TotalValue €</p>
                    </div>
                    <div class="card-footer text-center bg-light">
                        <a href="/Category/ByProductType/@productType.Id" class="btn btn-sm btn-primary">Voir les Catégories</a>
                    </div>
                </div>
            </div>
            }
        
       
    </div>
</div>
